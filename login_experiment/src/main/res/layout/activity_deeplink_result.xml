<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DeeplinkResultActivity"
    android:padding="@dimen/dimenLarge"
    >

  <TextView
      android:id="@+id/owlBankTitle"
      android:text="Welcome to Owl Bank!"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      style="@style/titleStyle"
      tools:visibility="visible"
      android:visibility="gone"
      />

  <Button
    android:id="@+id/myBalance"
      android:text="My Balance"
      android:textColor="@color/white"
      android:textAllCaps="false"
      android:layout_width="120dp"
      android:layout_height="120dp"
      android:backgroundTint="#3A86FC"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/owlBankTitle"
      app:layout_constraintEnd_toStartOf="@id/settings"
      app:layout_constraintBottom_toTopOf="@id/transfer"
      app:layout_constraintVertical_chainStyle="packed"
      app:layout_constraintHorizontal_chainStyle="packed"
      android:layout_margin="8dp"
      android:visibility="gone"
      tools:visibility="visible"
      />

  <Button
      android:id="@+id/settings"
      android:text="Settings"
      android:textColor="@color/white"
      android:textAllCaps="false"
      android:layout_width="120dp"
      android:layout_height="120dp"
      android:backgroundTint="#6AA90C"
      app:layout_constraintTop_toBottomOf="@id/owlBankTitle"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@id/myBalance"
      app:layout_constraintBottom_toTopOf="@id/products"
      app:layout_constraintVertical_chainStyle="packed"
      app:layout_constraintHorizontal_chainStyle="packed"
      android:layout_margin="8dp"
      android:visibility="gone"
      tools:visibility="visible"
      />

  <Button
      android:id="@+id/transfer"
      android:text="Transfer"
      android:textColor="@color/white"
      android:textAllCaps="false"
      android:layout_width="120dp"
      android:layout_height="120dp"
      android:backgroundTint="#6B0BFF"
      app:layout_constraintTop_toBottomOf="@id/myBalance"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toStartOf="@id/products"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintVertical_chainStyle="packed"
      app:layout_constraintHorizontal_chainStyle="packed"
      android:layout_margin="8dp"
      android:visibility="gone"
      tools:visibility="visible"
      />

  <Button
      android:id="@+id/products"
      android:text="Products"
      android:textColor="@color/white"
      android:textAllCaps="false"
      android:layout_width="120dp"
      android:layout_height="120dp"
      android:backgroundTint="#CD0276"
      app:layout_constraintTop_toBottomOf="@id/settings"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@id/transfer"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintVertical_chainStyle="packed"
      app:layout_constraintHorizontal_chainStyle="packed"
      android:layout_margin="8dp"
      android:visibility="gone"
      tools:visibility="visible"
      />

  <ProgressBar
    android:id="@+id/progressBar"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>